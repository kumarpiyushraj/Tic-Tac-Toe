<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <gradient
                android:startColor="#000000"
                android:endColor="#000000"
                android:type="linear"
                android:angle="135"/>
        </shape>
    </item>
<item
    android:top="2dp"
    android:bottom="2dp"
    android:left="2dp"
    android:right="2dp">
<shape android:shape="rectangle">
    <gradient
        android:startColor="#FF9E0C"
        android:endColor="#0196FC"
        android:type="linear"
        android:angle="135"/>
</shape>
</item>
</layer-list>