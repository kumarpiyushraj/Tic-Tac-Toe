<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <gradient
            android:endColor="#FF473B"
            android:startColor="#FF8E35"/>
        <corners android:radius="15dp"/>
    </shape>
</item>
    <item
        android:bottom="2dp"
        android:top="2dp"
        android:right="2dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#5845C8"
                android:endColor="#541CAE"
                android:type="linear"
                android:angle="270"/>
            <corners android:radius="13dp"/>
        </shape>
    </item>
</layer-list>