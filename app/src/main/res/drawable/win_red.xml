<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF0016"
                android:endColor="#FF0016"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:top="4dp"
        android:right="4dp"
        android:left="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#5E0009"
                android:endColor="#000000"
                android:type="linear"
                android:angle="270"/>
        </shape>
    </item>
</layer-list>