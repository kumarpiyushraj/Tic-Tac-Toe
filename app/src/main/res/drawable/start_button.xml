<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#00C4CC" android:width="1dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:top="3dp"
        android:right="3dp"
        android:left="3dp">
        <shape android:shape="rectangle">
            <stroke android:color="#FF9700" android:width="1dp"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:top="6dp"
        android:right="6dp"
        android:left="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/yellow"
                android:endColor="@color/yellow"
                android:centerColor="#FFE34C"
                android:type="linear"
                android:angle="90"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
</layer-list>