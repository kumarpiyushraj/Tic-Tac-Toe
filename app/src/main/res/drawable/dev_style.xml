<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
<shape android:shape="rectangle">
    <stroke android:color="#03CAB6" android:width="2dp">
    </stroke>
    <corners android:radius="4dp">
    </corners>
</shape>
    </item>

    <item
        android:bottom="3dp"
        android:top="3dp"
        android:right="3dp"
        android:left="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1D1C4663"
                android:endColor="#1D1C4663"
                android:centerColor="#1D4C47"
                android:type="linear"
                android:angle="270"/>
        </shape>
    </item>
</layer-list>