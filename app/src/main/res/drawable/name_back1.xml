<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-0dp"
        android:top="0dp"
        android:right="-8dp"
        android:left="-0dp">
        <shape android:shape="rectangle">
            <stroke android:color="#222222" android:width="2dp">
            </stroke>
            <corners android:radius="4dp">
            </corners>
        </shape>
    </item>

    <item
        android:bottom="2.2dp"
        android:top="2.2dp"
        android:left="2.2dp">
        <shape android:shape="rectangle">
            <solid android:color="#75FFFFFF"/>
            <corners android:topLeftRadius="3dp" android:bottomLeftRadius="3dp"/>
        </shape>
    </item>
</layer-list>