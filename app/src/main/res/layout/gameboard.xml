<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    app:layout_constrainedWidth="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gameboard_back"
    android:padding="15sp"
    tools:context=".GameBoard">

    <ImageView
        android:id="@+id/im1"
        android:layout_width="201dp"
        android:layout_height="50dp"
        android:rotation="3"
        android:scaleType="fitXY"
        android:src="@drawable/new2bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/P1"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:ellipsize="marquee"
        android:fontFamily="@font/artifika"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="-4"
        android:shadowRadius="8"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#FFAE00"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im1" />

    <TextView
        android:id="@+id/sc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/score_back"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/arvo"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="-3"
        android:shadowRadius="3"
        android:text="@string/score_0"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@id/player"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P1" />

    <TextView
        android:id="@+id/P2"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:ellipsize="marquee"
        android:fontFamily="@font/artifika"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="-4"
        android:shadowRadius="8"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#FFAE00"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im1" />

    <TextView
        android:id="@+id/sc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/score_back"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/arvo"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="-3"
        android:shadowRadius="3"
        android:text="@string/score_0"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/robot_player"
        app:layout_constraintTop_toBottomOf="@+id/P2" />

    <ImageView
        android:id="@+id/robot_player"
        android:layout_width="26dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="@id/sc2"
        app:layout_constraintRight_toLeftOf="@id/sc2"
        app:layout_constraintBottom_toBottomOf="@id/sc2"
        app:layout_constraintLeft_toLeftOf="@id/btn2"/>

    <ImageView
        android:id="@+id/player"
        android:layout_width="25.5dp"
        android:layout_height="25.5dp"
        app:layout_constraintTop_toTopOf="@id/sc1"
        app:layout_constraintLeft_toRightOf="@id/sc1"
        app:layout_constraintBottom_toBottomOf="@id/sc1"
        app:layout_constraintRight_toRightOf="@id/btn1"/>

    <TextView
        android:id="@+id/btn1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/turn_play_red"
        android:fontFamily="@font/archivo_bold"
        android:padding="1sp"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/P1"
        app:layout_constraintTop_toTopOf="@id/P1"
        app:layout_constraintBottom_toBottomOf="@id/P1"/>

    <TextView
        android:id="@+id/btn2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/turn_play_blue"
        android:fontFamily="@font/archivo_bold"
        android:padding="1sp"
        android:textAlignment="center"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/P2"
        app:layout_constraintBottom_toBottomOf="@id/P2"
        app:layout_constraintTop_toTopOf="@id/P2"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:fontFamily="@font/archivo_bold"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:shadowColor="@color/black"
        android:shadowDy="-2"
        android:shadowRadius="2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lay1" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay1"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="@drawable/board_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/T1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#192043"
            android:fontFamily="@font/archivo_bold"
            android:foreground="?attr/selectableItemBackground"
            android:shadowColor="@color/text_shadow_white"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:textSize="75dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/T4"
            app:layout_constraintLeft_toLeftOf="@id/lay1"
            app:layout_constraintRight_toLeftOf="@id/T2"
            app:layout_constraintTop_toTopOf="@id/lay1" />

        <TextView
            android:id="@+id/T2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:fontFamily="@font/archivo_bold"
            android:foreground="?attr/selectableItemBackground"
            android:shadowColor="@color/text_shadow_white"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:textSize="75dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/T5"
            app:layout_constraintLeft_toRightOf="@id/T1"
            app:layout_constraintRight_toLeftOf="@id/T3"
            app:layout_constraintTop_toTopOf="@id/lay1" />

        <TextView
            android:id="@+id/T3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#192043"
            android:fontFamily="@font/archivo_bold"
            android:foreground="?attr/selectableItemBackground"
            android:shadowColor="@color/text_shadow_white"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:textSize="75dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/T6"
            app:layout_constraintLeft_toRightOf="@id/T2"
            app:layout_constraintRight_toRightOf="@id/lay1"
            app:layout_constraintTop_toTopOf="@id/lay1" />

        <TextView
            android:id="@+id/T4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:fontFamily="@font/archivo_bold"
            android:foreground="?attr/selectableItemBackground"
            android:shadowColor="@color/text_shadow_white"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:textSize="75dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/T7"
            app:layout_constraintLeft_toLeftOf="@id/lay1"
            app:layout_constraintRight_toLeftOf="@id/T5"
            app:layout_constraintTop_toBottomOf="@id/T1" />

        <TextView
            android:id="@+id/T5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#192043"
            android:fontFamily="@font/archivo_bold"
            android:foreground="?attr/selectableItemBackground"
            android:shadowColor="@color/text_shadow_white"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:textSize="75dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/T8"
            app:layout_constraintLeft_toRightOf="@id/T4"
            app:layout_constraintRight_toLeftOf="@id/T6"
            app:layout_constraintTop_toBottomOf="@id/T2" />

        <TextView
            android:id="@+id/T6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:fontFamily="@font/archivo_bold"
            android:foreground="?attr/selectableItemBackground"
            android:shadowColor="@color/text_shadow_white"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:textSize="75dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/T9"
            app:layout_constraintLeft_toRightOf="@id/T5"
            app:layout_constraintRight_toRightOf="@id/lay1"
            app:layout_constraintTop_toBottomOf="@id/T3" />

        <TextView
            android:id="@+id/T7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#192043"
            android:fontFamily="@font/archivo_bold"
            android:foreground="?attr/selectableItemBackground"
            android:shadowColor="@color/text_shadow_white"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:textSize="75dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/lay1"
            app:layout_constraintLeft_toLeftOf="@id/lay1"
            app:layout_constraintRight_toLeftOf="@id/T8"
            app:layout_constraintTop_toBottomOf="@id/T4" />

        <TextView
            android:id="@+id/T8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:fontFamily="@font/archivo_bold"
            android:foreground="?attr/selectableItemBackground"
            android:shadowColor="@color/text_shadow_white"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:textSize="75dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/lay1"
            app:layout_constraintLeft_toRightOf="@id/T7"
            app:layout_constraintRight_toLeftOf="@id/T9"
            app:layout_constraintTop_toBottomOf="@id/T5" />

        <TextView
            android:id="@+id/T9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#192043"
            android:fontFamily="@font/archivo_bold"
            android:foreground="?attr/selectableItemBackground"
            android:shadowColor="@color/text_shadow_white"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:textSize="75dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/lay1"
            app:layout_constraintLeft_toRightOf="@id/T8"
            app:layout_constraintRight_toRightOf="@id/lay1"
            app:layout_constraintTop_toBottomOf="@id/T6" />

        <ImageView
            android:id="@+id/t19"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:fadingEdge="vertical"
            android:padding="5dp"
            android:rotation="90"
            android:src="@drawable/bar"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/lay1"
            app:layout_constraintLeft_toLeftOf="@id/lay1"
            app:layout_constraintRight_toRightOf="@id/lay1"
            app:layout_constraintTop_toTopOf="@id/lay1" />

        <ImageView
            android:id="@+id/t37"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:fadingEdge="vertical"
            android:padding="5dp"
            android:src="@drawable/bar"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/lay1"
            app:layout_constraintLeft_toLeftOf="@id/lay1"
            app:layout_constraintRight_toRightOf="@id/lay1"
            app:layout_constraintTop_toTopOf="@id/lay1" />

        <ImageView
            android:id="@+id/t17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:alpha="0.9"
            android:fadingEdge="vertical"
            android:padding="5dp"
            android:src="@drawable/bar2"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/lay1"
            app:layout_constraintLeft_toLeftOf="@id/lay1"
            app:layout_constraintTop_toTopOf="@id/lay1" />

        <ImageView
            android:id="@+id/t28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:alpha="0.9"
            android:fadingEdge="vertical"
            android:padding="5dp"
            android:rotation="90"
            android:src="@drawable/bar1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/lay1"
            app:layout_constraintLeft_toLeftOf="@id/lay1"
            app:layout_constraintRight_toRightOf="@id/lay1"
            app:layout_constraintTop_toTopOf="@id/lay1" />

        <ImageView
            android:id="@+id/t39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:alpha="0.9"
            android:fadingEdge="vertical"
            android:padding="5dp"
            android:src="@drawable/bar2"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/lay1"
            app:layout_constraintRight_toRightOf="@id/lay1"
            app:layout_constraintTop_toTopOf="@id/lay1" />

        <ImageView
            android:id="@+id/t13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:adjustViewBounds="true"
            android:alpha="0.9"
            android:fadingEdge="vertical"
            android:padding="5dp"
            android:src="@drawable/bar1"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/lay1"
            app:layout_constraintRight_toRightOf="@id/lay1"
            app:layout_constraintTop_toTopOf="@id/lay1" />

        <ImageView
            android:id="@+id/t46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:alpha="0.9"
            android:fadingEdge="vertical"
            android:padding="5dp"
            android:src="@drawable/bar1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/lay1"
            app:layout_constraintLeft_toLeftOf="@id/lay1"
            app:layout_constraintRight_toRightOf="@id/lay1"
            app:layout_constraintTop_toTopOf="@id/lay1" />

        <ImageView
            android:id="@+id/t79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:adjustViewBounds="true"
            android:alpha="0.9"
            android:fadingEdge="vertical"
            android:padding="5dp"
            android:src="@drawable/bar1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/lay1"
            app:layout_constraintLeft_toLeftOf="@id/lay1"
            app:layout_constraintRight_toRightOf="@id/lay1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/T10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:fontFamily="@font/alegreya_bold"
        android:gravity="center"
        android:maxWidth="310sp"
        android:paddingLeft="7sp"
        android:paddingTop="2sp"
        android:paddingRight="7sp"
        android:paddingBottom="2sp"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="-6"
        android:shadowRadius="1"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#D5FFFFFF"
        android:textSize="33dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lay1" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="7sp"
        android:background="@drawable/reset_board"
        android:fontFamily="@font/aldrich"
        android:foreground="?attr/selectableItemBackground"
        android:paddingTop="1dp"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="-2"
        android:shadowRadius="1"
        android:text="@string/replay_game"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Score"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="7sp"
        android:background="@drawable/reset_score"
        android:fontFamily="@font/aldrich"
        android:foreground="?attr/selectableItemBackground"
        android:paddingTop="1dp"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="-2"
        android:shadowRadius="1"
        android:text="@string/reset_score"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
