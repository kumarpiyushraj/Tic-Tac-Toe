    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:foregroundGravity="center"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="@id/layer3"
        app:layout_constraintLeft_toLeftOf="@id/layer3"
        app:layout_constraintRight_toRightOf="@id/layer3"
        app:layout_constraintTop_toTopOf="@id/layer3">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="32sp"
            android:paddingStart="18dp"
            android:fontFamily="@font/fugaz_one"
            android:shadowColor="@color/text_shadow"
            android:shadowDy="-3"
            android:shadowRadius="3"
            android:text="@string/about"
            android:textSize="30sp"
            android:textColor="#FF861D"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/layer"
            app:layout_constraintLeft_toLeftOf="@id/layer"
            app:layout_constraintTop_toTopOf="@id/layer4"/>

