                android:fontFamily="@font/chivo"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="@string/priyanshu_raj"
                android:textAlignment="center"
                android:textColor="#00FFAE"
                android:textSize="13.5sp"
                app:layout_constraintBottom_toTopOf="@id/text09"
                app:layout_constraintTop_toBottomOf="@id/text05"
                app:layout_constraintLeft_toRightOf="@id/text05"/>

            <TextView
                android:id="@+id/text07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="@string/manish_kumar_gupta"
                android:textAlignment="center"
                android:textColor="#00FFAE"
                android:textSize="13.5sp"
                app:layout_constraintBottom_toBottomOf="@id/layer"
                app:layout_constraintTop_toBottomOf="@id/text04"
                app:layout_constraintRight_toLeftOf="@id/text08" />

            <TextView
                android:id="@+id/text08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text=" | "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13.5sp"
                app:layout_constraintBottom_toBottomOf="@id/layer"
                app:layout_constraintLeft_toLeftOf="@id/layer"
                app:layout_constraintRight_toRightOf="@id/layer"/>

            <TextView
                android:id="@+id/text09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="@string/rizwan_ahmad_khan"
                android:textAlignment="center"
                android:textColor="#00FFAE"
                android:textSize="13.5sp"
                app:layout_constraintTop_toBottomOf="@id/text06"
                app:layout_constraintBottom_toBottomOf="@id/layer"
                app:layout_constraintLeft_toRightOf="@id/text08"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
