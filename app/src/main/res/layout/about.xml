                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                app:layout_constrainedWidth="true"
                android:text="@string/description2"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/text3_3"
                app:layout_constraintEnd_toEndOf="@id/layer"
                app:layout_constraintStart_toStartOf="@id/layer"
                app:layout_constraintTop_toBottomOf="@id/text3_1" />

            <TextView
                android:id="@+id/text3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elegantTextHeight="true"
                android:fontFamily="@font/artifika"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="@string/description3"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/text5"
                app:layout_constraintEnd_toEndOf="@id/layer"
                app:layout_constraintStart_toStartOf="@id/layer"
                app:layout_constraintTop_toBottomOf="@id/text3_2" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/dev_style"
                android:fontFamily="@font/aldrich"
                android:paddingLeft="6sp"
                android:paddingTop="2sp"
                android:paddingRight="6sp"
                android:paddingBottom="2sp"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-5"
                android:shadowRadius="1"
                android:text="@string/developers"
                android:textAlignment="center"
                android:textColor="#85FFA7"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text04"
                app:layout_constraintEnd_toEndOf="@id/layer"
                app:layout_constraintStart_toStartOf="@id/layer" />


            <TextView
                android:id="@+id/text04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="@string/kumar_piyush_raj"
                android:textAlignment="center"
                android:textColor="#00FFAE"
                android:textSize="13.5sp"
                app:layout_constraintBottom_toTopOf="@id/text07"
                app:layout_constraintTop_toBottomOf="@id/text05"
                app:layout_constraintRight_toLeftOf="@id/text05" />

            <TextView
                android:id="@+id/text05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo"
