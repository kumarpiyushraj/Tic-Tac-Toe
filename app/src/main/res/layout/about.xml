        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/about_design"
            android:paddingStart="4.4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="10sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/layer4"
            app:layout_constraintLeft_toLeftOf="@id/layer4"
            app:layout_constraintRight_toRightOf="@id/layer4"
            app:layout_constraintTop_toBottomOf="@id/text1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_marginTop="15sp"
                android:contentDescription="@string/game_logo"
                app:layout_constraintEnd_toEndOf="@id/layer"
                app:layout_constraintStart_toStartOf="@id/layer"
                app:layout_constraintTop_toTopOf="@id/layer"
                app:srcCompat="@drawable/tttlogo_border" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:paddingStart="7dp"
                android:paddingEnd="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/archivo_bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="@string/tic"
                android:background="@drawable/name_back1"
                android:textColor="#DC352E"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/imageView"
                app:layout_constraintRight_toLeftOf="@id/textv1"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <TextView
                android:id="@+id/textv1"
                android:layout_width="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/archivo_bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="@string/hyphen"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:background="@drawable/name_back2"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/text2"
                app:layout_constraintRight_toLeftOf="@id/textv2"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <TextView
                android:id="@+id/textv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/archivo_bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="@string/tac"
                android:background="@drawable/name_back2"
                android:textColor="#366DB5"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/textv1"
                app:layout_constraintRight_toLeftOf="@id/textv3"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <TextView
                android:id="@+id/textv3"
                android:layout_width="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/archivo_bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:background="@drawable/name_back2"
                android:text="@string/hyphen"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/textv2"
                app:layout_constraintRight_toLeftOf="@id/textv4"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <TextView
                android:id="@+id/textv4"
                android:layout_width="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="7dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/archivo_bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:background="@drawable/name_back3"
                android:text="@string/toe"
                android:textColor="#DC352E"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/textv3"
                app:layout_constraintRight_toRightOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <TextView
                android:id="@+id/text3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elegantTextHeight="true"
                android:fontFamily="@font/artifika"
                android:shadowColor="@color/text_shadow"
                android:shadowDy="-2"
                android:shadowRadius="1"
                app:layout_constrainedWidth="true"
                android:text="@string/description1"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/text3_2"
                app:layout_constraintEnd_toEndOf="@id/layer"
                app:layout_constraintStart_toStartOf="@id/layer"
                app:layout_constraintTop_toBottomOf="@id/text2" />

            <TextView
                android:id="@+id/text3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
