<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ConsLay"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/snackbar_back"
    android:paddingStart="15dp"
    android:paddingTop="5dp"
    android:paddingEnd="25dp"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/sntxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="-4"
        android:shadowRadius="1"
        android:textAlignment="viewStart"
        android:textColor="#E6E3E3"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/ConsLay"
        app:layout_constraintLeft_toLeftOf="@id/ConsLay"
        app:layout_constraintTop_toTopOf="@id/ConsLay" />

    <TextView
        android:id="@+id/OK"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:backgroundTint="#00000000"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="4dp"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="-4"
        android:shadowRadius="1"
        android:text="OK"
        android:textAlignment="viewEnd"
        android:textColor="#E6E3E3"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/ConsLay"
        app:layout_constraintRight_toRightOf="@id/ConsLay"
        app:layout_constraintTop_toTopOf="@id/ConsLay" />

</androidx.constraintlayout.widget.ConstraintLayout>